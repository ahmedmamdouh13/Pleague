<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="16dp"
    android:background="@color/darkbackground"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/item_shape_border"
        android:id="@+id/container_scheduleview_itemmatch"

        >


        <com.ahmedmamdouh13.theleague.ui.custom.ScheduleView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="start"
            android:id="@+id/match_scheduleview_itemmatch"
            android:layout_above="@id/border"



            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shape_border"
            android:alpha="0.5"
            android:id="@+id/border"
            android:layout_above="@id/favorite_container_itemmatch"
            />
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/favorite_container_itemmatch"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_favorite_border_black_24dp"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_rawRes="@raw/lottie_favorite"
                app:lottie_colorFilter="@color/colorAccent"


                android:layout_gravity="center"
                android:id="@+id/favorite_lottieview_itemmatch"
                />
        </FrameLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>