<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:lottie_colorFilter="@color/colorAccent"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:id="@+id/number_1_lottieview_itemmatchschedule"

            />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:lottie_colorFilter="@color/colorAccent"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:id="@+id/number_2_lottieview_itemmatchschedule"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:lottie_colorFilter="@color/colorAccent"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:id="@+id/number_3_lottieview_itemmatchschedule"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:lottie_colorFilter="@color/colorAccent"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:id="@+id/number_4_lottieview_itemmatchschedule"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorAccent"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:lottie_colorFilter="@color/colorAccent"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:id="@+id/number_5_lottieview_itemmatchschedule"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:lottie_colorFilter="@color/colorAccent"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:id="@+id/number_6_lottieview_itemmatchschedule"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorAccent"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:lottie_colorFilter="@color/colorAccent"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:id="@+id/number_7_lottieview_itemmatchschedule"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:lottie_colorFilter="@color/colorAccent"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            android:id="@+id/number_8_lottieview_itemmatchschedule"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:nestedScrollingEnabled="true"
        android:id="@+id/matches_recyclerview_item_matchschedule"
        />

</LinearLayout>